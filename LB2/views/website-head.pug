doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Центральная библиотека г. Луга
        link(rel="stylesheet" href="../public/awesomeFont/css/all.min.css")
        link(rel="stylesheet" href="../public/styles/libStyle.css")
        script(src="/ajax.js")

    body

        div(class = "page-head")
            div(class = "page-head-title-zone")
                h1(class = "page-head-title") Центральная библиотека г. Луга
                if(user.userName == "null")
                    p(class = "nickname") Гость
                else
                    if(user.adminRoot == true)
                        p(class = "page-head-nickname") #{user.userName} [режим администратора]
                    else
                        p(class = "page-head-nickname") #{user.userName}

            div(class = "page-head-log-zone")
                if user.userName == "null"
                    form(action="/login", method="get")
                        button(type="submit", class="leftBar")
                            p(class="fa-solid fa-right-to-bracket", class="page-head-log")  Войти

                else
                    form(action="/exit", method="post")
                        button(type="submit", class="leftBar")
                            p(class="fa fa-right-to-bracket", class="page-head-log")  Выйти
